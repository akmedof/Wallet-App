<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dateTimeHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/dateTwoPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/dateTimeMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/dateTimeVoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="|"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/dateTimeDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="02"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/dateTimeMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Jan"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/dateTimeYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="2022"
        android:textSize="12sp"
        android:textColor="@color/grey"/>





</LinearLayout>